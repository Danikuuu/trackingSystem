<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super Chow</title>
    <!-- Links -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="/css/adminDashboard.css">
</head>

<body>

    <!-- Main Start -->
    <div class="main">
        <!-- Sidebar -->
        <div class="sidebar shadow"><!--shadow -->
            <p class="text-dark mt-3 text-center fw-bold fs-6">Super Chow</p>
            <hr class="horizontal hr text-dark mt-0 mb-2">
            <a href="" class="active"><i class="fa-solid fa-chart-line"></i> Dashboard</a>
            <a href="/menu"><i class="fa-solid fa-table"></i> Menu</a>
            <a href="/order"><i class="fa-solid fa-table"></i> Order</a>
            <a href="/orderList"><i class="fa-solid fa-table"></i> Order List</a>
            <a href="/product"><i class="fa-solid fa-table"></i> Product</a>
        </div>

        <!-- Overlay -->
        <div id="overlay" class="overlay" onclick="toggleSidebar()"></div>

        <!-- Content -->
        <div class="content" style="padding-right: 15px; padding-left: 15px;">
            <div class="container-fluid px-3">
                <div class="row">

                    <!-- navbar -->
                    <nav class="navbar navbar-expand-lg mb-4" style="margin-top: -40px;">
                        <div class="container-fluid d-flex justify-content-between align-items-center" style="background-color: #f0f2f5;">
                        <!-- Breadcrumb section -->
                        <div class="d-flex flex-column align-items-start">
                            <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item" style="text-decoration: none;">Pages</li>
                                <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                            </ol>
                            </nav>
                            <h5 class="mb-0 fw-bolder">Dashboard</h5>
                        </div>

                        <!-- Right section with search bar and icons -->
                        <div class="d-flex align-items-center mt-3">
                            <!-- Search input -->
                            <form class="d-md-flex me-2 ms-3">
                            <input class="form-control search form-control-sm" type="search" placeholder="Type here..." aria-label="Search">
                            </form>

                            <!-- Icons -->
                            <a href="#" class="me-2 ms-1 zone">
                                <i class="fa-solid fa-bars hide-on-large" onclick="toggleSidebar()"></i>
                            </a>
                            <a href="/adminDashboard" class="me-2 zone">
                                <i class="fa-solid fa-house"></i>
                            </a>
                            <a href="#" class="me-0 zone">
                                <i class="fas fa-bell"></i>
                            </a>
                            <!-- Dropdown Menu -->
                            <div class="dropdown position-relative">
                                <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="border: none;">
                                    <i class="fas fa-user"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item fw-bold disabled" href="#">Action:</a></li>
                                    <li><a class="dropdown-item fw-bold btn-logout" href="#" id="logoutButton"><i class="fa-solid fa-arrow-right-from-bracket"></i>Logout</a></li>
                                </ul>
                            </div>
                        </div>
                        </div>
                    </nav>

                    

                    <div class="row" style="margin-top: -50px;">

                        <div class="container my-4">
                            <div class="d-flex justify-content-between mt-3">
                                <select id="dateFilter" class="form-select w-auto">
                                    <option value="today" disabled selected>Filter</option> <!-- Disabled filter option -->
                                    <option value="today">Today</option>
                                    <option value="week">This Week</option>
                                    <option value="month">This Month</option>
                                    <option value="year">This Year</option>
                                </select>
                            </div>
                        </div>

                        <!-- Card 1 -->
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12 mx-auto mb-3">
                            <div class="card text-center shadow-card">
                                <div class="card-body">
                                    <div style="background: linear-gradient(to bottom, #ff6666, #dd1a1a); position: absolute; top: -18px; left: 17px; width: 63px; height: 63px; border-radius: 10px; display: flex; align-items: center; justify-content: center; box-shadow: 0px 6px 3px rgb(218, 212, 212)">
                                        <i class="fa-solid fa-peso-sign" style="color: white; font-size: 35px;"></i>
                                    </div>
                                    <h5 class="card-title mb-0" style="color: #7b7c80; font-size: 17px; font-family: roboto,Arial, Helvetica, sans-serif; text-align: right;">Revenue</h5>
                                    <p class="card-text fs-4 fw-bold" style="color:#344767; text-align: right;">₱ <%= totalRevenue.toFixed(2) %></p>
                                    <hr class="horizontal hr text-dark mt-0" style="border: 1px solid #e0d1d1; width: calc(100% + 30px); margin-left: -15px; margin-bottom: 19px;">
                                </div>
                            </div>
                        </div>
                    
                        <!-- Card 2 -->
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12 mx-auto mb-3">
                            <div class="card text-center shadow-card">
                                <div class="card-body">
                                    <div style="background: linear-gradient(-90deg, #428eff, #273cf3); position: absolute; top: -18px; left: 17px; width: 63px; height: 63px; border-radius: 10px; display: flex; align-items: center; justify-content: center; box-shadow: 0px 6px 3px rgb(218, 212, 212)">
                                        <i class="fa-solid fa-box fa-2x" style="color: white; font-size: 40px;"></i>
                                    </div>
                                    <h5 class="card-title mb-0" style="color: #7b7c80; font-size: 17px; font-family: roboto,Arial, Helvetica, sans-serif; text-align: right;">Menu Items</h5>
                                    <p class="card-text fs-4 fw-bold" style="color:#344767; text-align: right;"><%= totalFoodItems %></p>
                                    <hr class="horizontal hr text-dark mt-0" style="border: 1px solid #e0d1d1; width: calc(100% + 30px); margin-left: -15px; margin-bottom: 19px;">
                                </div>
                            </div>
                        </div>
                    
                        <!-- Card 3 -->
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12 mx-auto mb-3">
                            <div class="card text-center shadow-card">
                                <div class="card-body">
                                    <div style="background: linear-gradient(to bottom,  #eeee22,  #cdcd2a); position: absolute; top: -18px; left: 17px; width: 63px; height: 63px; border-radius: 10px; display: flex; align-items: center; justify-content: center; box-shadow: 0px 6px 3px rgb(218, 212, 212)">
                                        <i class="fa-solid fa-truck-fast" style="color: white; font-size: 35px;"></i>
                                    </div>
                                    <h5 class="card-title mb-0" style="color: #7b7c80; font-size: 17px; font-family: roboto,Arial, Helvetica, sans-serif; text-align: right;">Orders</h5>
                                    <p class="card-text fs-4 fw-bold" style="color:#344767; text-align: right;"><%= totalOrders %></p>
                                    <hr class="horizontal hr text-dark mt-0" style="border: 1px solid #e0d1d1; width: calc(100% + 30px); margin-left: -15px; margin-bottom: 19px;">
                                </div>
                            </div>
                        </div>
                    
                        <!-- Card 4 (Today's Revenue) -->
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12 mx-auto mb-3">
                            <div class="card text-center shadow-card">
                                <div class="card-body">
                                    <div style="background: linear-gradient(to bottom, #30fe60, #19a036); position: absolute; top: -18px; left: 17px; width: 63px; height: 63px; border-radius: 10px; display: grid; align-items: center; justify-content: center; box-shadow: 0px 6px 3px rgb(218, 212, 212)">
                                        <i class="fa-solid fa-map" style="color: white; font-size: 40px;"></i>
                                    </div>
                                    <h5 class="card-title mb-0" style="color: #7b7c80; font-size: 17px; font-family: roboto,Arial, Helvetica, sans-serif; text-align: right;">Today's Revenue</h5>
                                    <p class="card-text fs-4 fw-bold" style="color:#344767; text-align: right;"> <%= overallTotal.toLocaleString('en-US', { style: 'currency', currency: 'PHP' }) %></p>
                                    <hr class="horizontal hr text-dark mt-0" style="border: 1px solid #e0d1d1; width: calc(100% + 30px); margin-left: -15px; margin-bottom: 19px;">
                                </div>
                            </div>
                        </div>
                    
                        <!-- Card 5 (Today's Orders) -->
                        <div class="col-lg-3 col-md-6 col-sm-6 col-12 mx-auto mb-3">
                            <div class="card text-center shadow-card">
                                <div class="card-body">
                                    <div style="background: linear-gradient(to bottom, #c430fe, #8c19a0); position: absolute; top: -18px; left: 17px; width: 63px; height: 63px; border-radius: 10px; display: grid; align-items: center; justify-content: center; box-shadow: 0px 6px 3px rgb(218, 212, 212)">
                                        <i class="fa-solid fa-map" style="color: white; font-size: 40px;"></i>
                                    </div>
                                    <h5 class="card-title mb-0" style="color: #7b7c80; font-size: 17px; font-family: roboto,Arial, Helvetica, sans-serif; text-align: right;">Today's Order</h5>
                                    <p class="card-text fs-4 fw-bold" style="color:#344767; text-align: right;"><%= todaysOrderTotal %></p>
                                    <hr class="horizontal hr text-dark mt-0" style="border: 1px solid #e0d1d1; width: calc(100% + 30px); margin-left: -15px; margin-bottom: 19px;">
                                </div>
                            </div>
                        </div>
                    </div>
                    

                    
                    <!-- Card 5 
                    <div class="col-md-8">
                            <div class="card text-center shadow-card">
                                <div class="card-body">
                                    <div class="card-icon mb-0">
                                        <i class="bi bi-bar-chart-fill"></i>
                                        </div>
                                        <h5 class="card-title">Sales</h5>
                                        <p class="card-text">$103,430</p>
                                    </div>
                                </div>
                            </div> -->

                            <!--<h3>Total for Today: <%= overallTotal.toLocaleString('en-US', { style: 'currency', currency: 'PHP' }) %></h3>
                            <h3>Today's Total Orders: <%= todaysOrderTotal %></h3>-->


                            <div class="col-lg-12 col-md-6 col-sm-10 col-10 mx-auto mb-3" style="margin-top: 15px;">
                                <div class="card text-center shadow-card">
                                    <div class="card-body"> 
                                        <h4 style="margin-top: 20px; margin-bottom: 25px;">Weekly Sales Overview</h4>
                                        <div class="card mb-4 mx-auto">
                                            <!--<div class="card-header text-center">Weekly Sales Overview</div>-->
                                            <div class="card-body">
                                                <canvas id="weeklySalesChart" height="80px" width="auto"> </canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                </div>
            </div>
        </div>

      

        <!-- Footer Start-->
        <div class="footer" style="box-shadow: none;">
                <p class="text-center justify-content-center">© 2024, by PrincePLS17.</p>
        </div>
        <!-- Footer End-->

    </div>
    <!-- Main End -->

    <script>
        function toggleSidebar() {
            const sidebar = document.querySelector('.sidebar');
            const overlay = document.getElementById('overlay');
            sidebar.classList.toggle('show');
            overlay.style.display = sidebar.classList.contains('show') ? 'block' : 'none';
        }

        document.getElementById('logoutButton').addEventListener('click', function () {
            // Show SweetAlert confirmation
            swal({
                title: "Warning!",
                text: "Are you sure you want to logout?",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
            .then((willLogout) => {
                if (willLogout) {
                    // Redirect to the logout route
                    window.location.href = '/logout';
                }
            });
        });
    </script>

      <!-- hhhlchdlchlcldh-->
      <script src="/js/sweetAlert.js" defer></script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

  
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script> <!-- Include Chart.js -->

    <script>
        function toggleSidebar() {
            const sidebar = document.querySelector('.sidebar');
            const overlay = document.getElementById('overlay');
            sidebar.classList.toggle('show');
            overlay.style.display = sidebar.classList.contains('show') ? 'block' : 'none';
        }
    </script>


<script>
    // Data passed from the server-side
    const labels = <%- JSON.stringify(labels) %>;
    const revenues = <%- JSON.stringify(revenues) %>;

    // Chart configuration
    const ctx = document.getElementById('weeklySalesChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Daily Revenue (₱)',
                data: revenues,
                backgroundColor: 'rgba(75, 192, 192, 0.6)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Revenue (₱)'
                    }
                },
                x: {
                    title: {
                        display: true,
                        text: 'Date'
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });
</script>

</body>
</html>

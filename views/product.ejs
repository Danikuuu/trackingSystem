    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f0f2f5;
        overflow-x: hidden;
    }

    .main {
        display: grid;
        grid-template-areas:
            "header header"
            "sidebar content"
            "footer footer";
        grid-template-columns: 250px 1fr;
        grid-template-rows: auto 1fr auto;
        min-height: 100vh;
        gap: 10px;
    }

/* Sidebar *************************************************************************************************************************8**/
    /* Sidebar */
    .sidebar {
        grid-area: sidebar;
        background-color: white; /*white*/
        padding: 15px;
        margin-top: 15px;
        margin-left: 15px;
        margin-bottom: 15px;
        border-radius: 12px;
        height: 96%;
        overflow-y: auto;
        position: fixed;
        width: 250px;
        transition: transform 0.3s ease-in-out; /* slide transition of sidebar */
        z-index: 1000; /* Add this to ensure it's in front of other content */
    }

    .sidebar a {
        display: block;
        color: #333;
        padding: 10px 15px;
        padding-left: 55px;
        text-decoration: none;
        margin-bottom: 10px;
        border-radius: 5px;
        transition: all 0.5s ease; 
        z-index: 1;
    }

    .sidebar a:hover {
        background-color: #495057;
        color: white;
        transition: all 0.5s ease; 
    }

    .sidebar a.active {
        background-color: #428eff;
        color: white;
    }

    a i {
        margin-right: 8px;
    }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
         /*background-color: rgba(24, 23, 23, 0.1); /* Semi-transparent background */
        /*backdrop-filter: blur(2px); /* Blur effect for background content */
        display: none; /* Hidden by default */
        z-index: 999; /* Ensure it's above other elements */
    }

/*main*****************************************************************************************************************************/
    /* Content */
    .content {
        grid-area: content;
        padding: 38px;
    }

    
/*Navbar**********************************************************************************************************************************/
    .navbar {
        background-color: #f0f2f5; /* Light background color */
        padding-bottom: 20px;
    }

    .breadcrumb {
        background: transparent;
        padding-left: 0;
        text-decoration: none;
    }

    .form-control-sm {
        width: 200px;
    }

    .me-3 {
        margin-right: 1rem;
    }

    .navbar .fas {
        font-size: 20px; /*1.2rem */
        color: #6c757d;
    }

    .navbar .fa-bars {
        font-size: 20px;
        color: #6c757d;
    }

    .navbar .fa-house {
        font-size: 20px;
        color: #6c757d;
    }
   

    .d-flex.flex-column {

    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f0f2f5;
        overflow-x: hidden;
    }

    .main {
        display: grid;
        grid-template-areas:
            "header header"
            "sidebar content"
            "footer footer";
        grid-template-columns: 250px 1fr;
        grid-template-rows: auto 1fr auto;
        min-height: 100vh;
        gap: 10px;
    }

/* Sidebar *************************************************************************************************************************8**/
    /* Sidebar */
    .sidebar {
        grid-area: sidebar;
        background-color: white; /*white*/
        padding: 15px;
        margin-top: 15px;
        margin-left: 15px;
        margin-bottom: 15px;
        border-radius: 12px;
        height: 96%;
        overflow-y: auto;
        position: fixed;
        width: 250px;
        transition: transform 0.3s ease-in-out; /* slide transition of sidebar */
        z-index: 1000; /* Add this to ensure it's in front of other content */
    }

    .sidebar a {
        display: block;
        color: #333;
        padding: 10px 15px;
        padding-left: 55px;
        text-decoration: none;
        margin-bottom: 10px;
        border-radius: 5px;
        transition: all 0.5s ease; 
        z-index: 1;
    }

    .sidebar a:hover {
        background-color: #495057;
        color: white;
        transition: all 0.5s ease; 
    }

    .sidebar a.active {
        background-color: #428eff;
        color: white;
    }

    a i {
        margin-right: 8px;
    }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
         /*background-color: rgba(24, 23, 23, 0.1); /* Semi-transparent background */
        /*backdrop-filter: blur(2px); /* Blur effect for background content */
        display: none; /* Hidden by default */
        z-index: 999; /* Ensure it's above other elements */
    }

/*main*****************************************************************************************************************************/
    /* Content */
    .content {
        grid-area: content;
        padding: 38px;
    }

    
/*Navbar**********************************************************************************************************************************/
    .navbar {
        background-color: #f0f2f5; /* Light background color */
        padding-bottom: 20px;
    }

    .breadcrumb {
        background: transparent;
        padding-left: 0;
        text-decoration: none;
    }

    .form-control-sm {
        width: 200px;
    }

    .me-3 {
        margin-right: 1rem;
    }

    .navbar .fas {
        font-size: 20px; /*1.2rem */
        color: #6c757d;
    }

    .navbar .fa-bars {
        font-size: 20px;
        color: #6c757d;
    }

    .navbar .fa-house {
        font-size: 20px;
        color: #6c757d;
    }
   

    .d-flex.flex-column {
        padding-left: 20px; /* Adjust this for desired left alignment */
    }

    h5 {
        font-size: 16px;
        margin-top: 0.25rem;
    }

/*Footer*********************************************************************************************************************************/
    /* Footer */
    .footer {
        grid-area: footer;
        background-color: #f0f2f5;
        padding: 15px;
        text-align: center;
        box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
    }

/*Designs and Resolutions****************************************************************************************************************/
    /* Responsive Design */
    @media (max-width: 900px) {
        .main {
            grid-template-columns: 1fr;
        }

        .sidebar {
            transform: translateX(-108%);
            z-index: 1000; /* Add this to ensure it's in front of other content */
        }

        .sidebar.show {
            transform: translateX(0);
        }

        .content {
            margin-left: -7px;
        }  
    }

     /* Responsive Design close fa-bars*/
    @media (min-width: 900px) {
        .hide-on-large {
            display: none;
        }
    }


    /* Responsive Design */
    @media (max-width: 576px) { /* max-width: 576px */
        .search{
            margin-right: 70px; /* Add this to give space right for search input */
        }
    } 

    .shadow-card{
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Adds a subtle shadow */
        border: none;
        border-radius: 13px;
    } 
    

/*lcon toggle button********************************************************************************************************************************/
    .dropdown-toggle::after {
display: none;
}
.dropdown-item {
color: #344767; /* Optional: Change text color to white for better contrast */
}
.dropdown-item:hover {
background-color: rgb(130, 155, 189); /* Change background color on hover */
color: white; /* Optional: Change text color to white for better contrast */
}


/*</style>*/
</style>

